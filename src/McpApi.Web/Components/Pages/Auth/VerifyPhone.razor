@page "/auth/verify-phone"
@using McpApi.Core.Auth
@using McpApi.Web.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IAuthService AuthService
@inject ICurrentUserService CurrentUserService
@inject NavigationManager Navigation

<PageTitle>Verify Phone - MCP-API</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card mt-5">
            <div class="card-header">
                <h4 class="mb-0">Phone Verification</h4>
            </div>
            <div class="card-body">
                @if (_verificationComplete)
                {
                    <div class="alert alert-success">
                        <h5>Phone Verified!</h5>
                        <p>Your phone number has been successfully verified.</p>
                    </div>
                    <a href="/" class="btn btn-primary w-100">Go to Dashboard</a>
                }
                else if (!_codeSent)
                {
                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger">@_errorMessage</div>
                    }

                    <p>Enter your phone number to receive a verification code.</p>

                    <EditForm Model="_phoneModel" OnValidSubmit="SendCode">
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <InputText id="phone" class="form-control" @bind-Value="_phoneModel.PhoneNumber" placeholder="+1234567890" />
                            <small class="text-muted">Include country code (e.g., +1 for US)</small>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" disabled="@_isLoading">
                            @if (_isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Send Code
                        </button>
                    </EditForm>
                }
                else
                {
                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger">@_errorMessage</div>
                    }

                    <p>Enter the 6-digit code sent to <strong>@_phoneModel.PhoneNumber</strong></p>

                    <EditForm Model="_codeModel" OnValidSubmit="VerifyCode">
                        <div class="mb-3">
                            <label for="code" class="form-label">Verification Code</label>
                            <InputText id="code" class="form-control" @bind-Value="_codeModel.Code" placeholder="123456" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100" disabled="@_isLoading">
                            @if (_isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            Verify
                        </button>
                    </EditForm>

                    <hr />

                    <button class="btn btn-link w-100" @onclick="ResendCode" disabled="@_isLoading">
                        Resend Code
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private PhoneModel _phoneModel = new();
    private CodeModel _codeModel = new();
    private string? _errorMessage;
    private bool _isLoading;
    private bool _codeSent;
    private bool _verificationComplete;

    private async Task SendCode()
    {
        _errorMessage = null;
        _isLoading = true;

        try
        {
            var userId = CurrentUserService.UserId;
            if (string.IsNullOrEmpty(userId))
            {
                Navigation.NavigateTo("/auth/login");
                return;
            }

            var result = await AuthService.SetPhoneNumberAsync(userId, _phoneModel.PhoneNumber);
            if (result.Success)
            {
                _codeSent = true;
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "Failed to send verification code.";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task VerifyCode()
    {
        _errorMessage = null;
        _isLoading = true;

        try
        {
            var userId = CurrentUserService.UserId;
            if (string.IsNullOrEmpty(userId))
            {
                Navigation.NavigateTo("/auth/login");
                return;
            }

            var result = await AuthService.VerifyPhoneAsync(userId, _codeModel.Code);
            if (result.Success)
            {
                _verificationComplete = true;
            }
            else
            {
                _errorMessage = result.ErrorMessage ?? "Invalid verification code.";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ResendCode()
    {
        await SendCode();
    }

    private class PhoneModel
    {
        public string PhoneNumber { get; set; } = "";
    }

    private class CodeModel
    {
        public string Code { get; set; } = "";
    }
}
