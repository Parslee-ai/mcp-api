@page "/apis/register"
@using AnyAPI.Core.Models
@using AnyAPI.Core.OpenApi
@using AnyAPI.Web.Services
@inject ApiManagementService ApiService
@inject OpenApiDiscovery Discovery
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Register API - AnyAPI</PageTitle>

<h1>Register New API</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="alert alert-danger alert-dismissible">
                        <strong>Error:</strong> @error
                        @if (errorSuggestion != null)
                        {
                            <hr />
                            <small>@errorSuggestion</small>
                        }
                        <button type="button" class="btn-close" @onclick="ClearError"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(success))
                {
                    <div class="alert alert-success alert-dismissible">
                        @success
                        <button type="button" class="btn-close" @onclick="() => success = null"></button>
                    </div>
                }

                @if (wellKnownMatch != null)
                {
                    <div class="alert alert-info">
                        <strong>@wellKnownMatch.Name detected!</strong>
                        <p class="mb-2">We have the official spec URL for this API.</p>
                        <button class="btn btn-sm btn-info" @onclick="UseWellKnownSpec">
                            Use Official Spec
                        </button>
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label">API Base URL</label>
                    <div class="input-group">
                        <input type="url"
                               class="form-control"
                               placeholder="https://api.example.com"
                               @bind="baseUrl"
                               @bind:event="oninput"
                               @onfocusout="CheckWellKnownApi"
                               disabled="@isProcessing" />
                        <button class="btn btn-outline-secondary"
                                type="button"
                                @onclick="DiscoverSpec"
                                disabled="@(isProcessing || string.IsNullOrEmpty(baseUrl))">
                            @if (isDiscovering)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                            }
                            else
                            {
                                <span>Discover</span>
                            }
                        </button>
                    </div>
                    <small class="form-text text-muted">
                        Enter the base URL and click Discover, or select a well-known API below.
                    </small>
                </div>

                <div class="mb-3">
                    <label class="form-label">OpenAPI Spec URL (optional)</label>
                    <input type="url"
                           class="form-control"
                           placeholder="https://api.example.com/openapi.json"
                           @bind="specUrl"
                           disabled="@isProcessing" />
                    <small class="form-text text-muted">
                        If auto-discovery doesn't work, provide the direct URL to the OpenAPI spec.
                    </small>
                </div>

                @if (discoveredUrls.Count > 0)
                {
                    <div class="mb-3">
                        <label class="form-label">Discovered Spec URLs</label>
                        <div class="list-group">
                            @foreach (var url in discoveredUrls)
                            {
                                <button type="button"
                                        class="list-group-item list-group-item-action @(url == specUrl ? "active" : "")"
                                        @onclick="() => specUrl = url">
                                    @url
                                </button>
                            }
                        </div>
                    </div>
                }

                <hr />

                <div class="d-flex justify-content-between">
                    <a href="apis" class="btn btn-outline-secondary">Cancel</a>
                    <button class="btn btn-primary"
                            @onclick="RegisterApi"
                            disabled="@(isProcessing || (string.IsNullOrEmpty(baseUrl) && string.IsNullOrEmpty(specUrl)))">
                        @if (isRegistering)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Register API
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Tips</h5>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>The system will try to discover the OpenAPI spec at common locations.</li>
                    <li>Supported formats: OpenAPI 3.0 and 3.1 (JSON or YAML).</li>
                    <li>After registration, you can configure authentication.</li>
                    <li>Endpoints can be individually enabled/disabled.</li>
                </ul>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Well-Known APIs</h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var api in OpenApiDiscovery.GetAllWellKnownApis())
                    {
                        <button type="button"
                                class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                                @onclick="() => SelectWellKnownApi(api.Key, api.Value)"
                                disabled="@isProcessing">
                            <span>@api.Value.Name</span>
                            <small class="text-muted">@api.Key</small>
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Common Spec Locations</h5>
            </div>
            <div class="card-body">
                <code class="d-block">/openapi.json</code>
                <code class="d-block">/swagger.json</code>
                <code class="d-block">/api-docs</code>
                <code class="d-block">/v3/api-docs</code>
                <code class="d-block">/.well-known/openapi.json</code>
            </div>
        </div>
    </div>
</div>

@code {
    private string baseUrl = "";
    private string specUrl = "";
    private string? error;
    private string? errorSuggestion;
    private string? success;
    private bool isDiscovering;
    private bool isRegistering;
    private bool isProcessing => isDiscovering || isRegistering;
    private List<string> discoveredUrls = new();
    private WellKnownApi? wellKnownMatch;

    private void ClearError()
    {
        error = null;
        errorSuggestion = null;
    }

    private void CheckWellKnownApi()
    {
        if (string.IsNullOrEmpty(baseUrl)) return;
        wellKnownMatch = OpenApiDiscovery.GetWellKnownSpec(baseUrl);
    }

    private void UseWellKnownSpec()
    {
        if (wellKnownMatch != null)
        {
            specUrl = wellKnownMatch.SpecUrl;
            success = $"Using official {wellKnownMatch.Name} spec URL.";
            wellKnownMatch = null;
        }
    }

    private void SelectWellKnownApi(string host, WellKnownApi api)
    {
        baseUrl = $"https://{host}";
        specUrl = api.SpecUrl;
        wellKnownMatch = null;
        success = $"Selected {api.Name}. Ready to register!";
    }

    private async Task DiscoverSpec()
    {
        isDiscovering = true;
        ClearError();
        discoveredUrls.Clear();

        try
        {
            // Check well-known APIs first
            var wellKnown = OpenApiDiscovery.GetWellKnownSpec(baseUrl);
            if (wellKnown != null)
            {
                specUrl = wellKnown.SpecUrl;
                discoveredUrls.Add(wellKnown.SpecUrl);
                success = $"Found official {wellKnown.Name} spec!";
                return;
            }

            var discovered = await Discovery.DiscoverAsync(baseUrl);
            if (discovered != null)
            {
                specUrl = discovered;
                discoveredUrls.Add(discovered);
                success = "OpenAPI spec discovered successfully!";
            }
            else
            {
                // Show common locations to try
                discoveredUrls = OpenApiDiscovery.GetCommonSpecUrls(baseUrl).ToList();
                error = "Could not auto-discover OpenAPI spec.";
                errorSuggestion = "Many popular APIs don't serve their spec from standard locations. Check if this API has a well-known spec in the sidebar, or provide the direct URL to the OpenAPI/Swagger spec.";
            }
        }
        catch (Exception ex)
        {
            error = $"Discovery failed: {ex.Message}";
        }
        finally
        {
            isDiscovering = false;
        }
    }

    private async Task RegisterApi()
    {
        isRegistering = true;
        ClearError();
        success = null;

        try
        {
            var api = await ApiService.RegisterApiAsync(
                baseUrl,
                string.IsNullOrEmpty(specUrl) ? null : specUrl);

            Navigation.NavigateTo($"apis/{api.Id}");
        }
        catch (Exception ex)
        {
            var message = ex.Message;
            var fullMessage = ex.ToString();

            // Provide helpful suggestions for common errors
            if (message.Contains("YAML", StringComparison.OrdinalIgnoreCase) ||
                message.Contains("parse", StringComparison.OrdinalIgnoreCase))
            {
                error = "Failed to parse the OpenAPI spec.";
                errorSuggestion = "Make sure you're providing the URL to the raw spec file (JSON or YAML), not an HTML documentation page. For GitHub-hosted specs, use the raw.githubusercontent.com URL.";
            }
            else if (message.Contains("RequestEntityTooLarge") ||
                     fullMessage.Contains("StatusCode: RequestEntityTooLarge") ||
                     fullMessage.Contains("Response status code does not indicate success: 413"))
            {
                error = "The API spec is too large.";
                errorSuggestion = "This API has too many endpoints for a single document. The system will split them into separate storage entries automatically. Please try again.";
            }
            else if (ex is AggregateException aggEx)
            {
                // Show details from multiple failures (e.g., endpoint save failures)
                var firstInner = aggEx.InnerExceptions.FirstOrDefault();
                error = $"Registration failed: {message}";
                errorSuggestion = firstInner != null ? $"First error: {firstInner.Message}" : null;
            }
            else
            {
                error = $"Registration failed: {message}";
                if (ex.InnerException != null)
                {
                    errorSuggestion = $"Details: {ex.InnerException.Message}";
                }
            }
        }
        finally
        {
            isRegistering = false;
        }
    }
}
